---
import "../styles/normalize.css";
import "../styles/global.css";
import "../styles/layout.scss";

import Header from "../components/sections/Header.astro";
import Footer from "../components/sections/Footer.astro";

function isMainPage(pathname: string) {
  return Boolean(pathname === import.meta.env.BASE_URL
    || pathname === `${import.meta.env.BASE_URL}/`
    || pathname === '/'
  );
}

const HeaderLinks = isMainPage(Astro.url.pathname)
  ? [
      {
        label: "Главная",
        href: "/rosmebeli/#hero",
        active: true
      },
      {
        label: "О Нас",
        href: "/rosmebeli/#about-us"
      },
      {
        label: "Наши работы",
        href: "/rosmebeli/#catalog"
      },
      {
        label: "Отзывы",
        href: "/rosmebeli/#reviews"
      },
      {
        label: "Контакты",
        href: "/rosmebeli/#contacts"
      }
    ]
  : [
      {
        label: "Главная",
        href: "/rosmebeli/"
      },
      {
        label: "О компании",
        href: "/rosmebeli/about"
      },
      {
        label: "Каталог",
        href: "/rosmebeli/catalog"
      },
      {
        label: "Статьи",
        href: "/rosmebeli/posts"
      },
      {
        label: "Услуги",
        href: "/rosmebeli/services"
      },
    ];

interface Props {
  title: string;
}

const description = "Качественная мебель под заказ по индивидуальным размерам в Москве и Московской области от производителя Росмебель"

const { title } = Astro.props;
---
<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/rosmebeli/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:locale" content="ru_RU" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="РОСМЕБЕЛЬ" />
    <title>{title}</title>
  </head>
  <body>
    <Header links={HeaderLinks} />
    <slot />
    <Footer />
    <script>
      import gsap from "gsap";
      import ScrollTrigger from "gsap/ScrollTrigger";

      window.gsap = gsap;
      window.ScrollTrigger = ScrollTrigger;

      gsap.registerPlugin(ScrollTrigger);
    </script>
    <script>
      // Регистрируем swiper
      import { register } from 'swiper/element/bundle';
      register()
    </script>
  </body>
</html>

<style is:global>
	swiper-container {
    --swiper-pagination-bullet-inactive-color: var(--clr-900);
		--swiper-theme-color: var(--clr-secondary-700);

		width: 100%;
    height: 100%;
	}

	swiper-slide {
		width: clamp(30%, 30rem, 50vw);
	}
</style>
