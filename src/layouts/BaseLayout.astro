---
import "../styles/normalize.css";
import "../styles/global.css";
import "../styles/layout.scss";

import Header from "../components/sections/Header.astro";
import Footer from "../components/sections/Footer.astro";

function isMainPage(pathname: string) {
  return Boolean(pathname === import.meta.env.BASE_URL
    || pathname === `${import.meta.env.BASE_URL}/`
    || pathname === '/'
  );
}

const HeaderLinks = isMainPage(Astro.url.pathname)
  ? [
      {
        label: "Главная",
        href: "/rosmebeli/#hero",
        active: true
      },
      {
        label: "О Нас",
        href: "/rosmebeli/#about-us"
      },
      {
        label: "Наши работы",
        href: "/rosmebeli/#catalog"
      },
      {
        label: "Отзывы",
        href: "/rosmebeli/#reviews"
      },
      {
        label: "Контакты",
        href: "/rosmebeli/#contacts"
      }
    ]
  : [
      {
        label: "Главная",
        href: "/rosmebeli/"
      },
      {
        label: "Каталог",
        href: "/rosmebeli/catalog"
      },
      {
        label: "Статьи",
        href: "/rosmebeli/posts"
      }
    ];

interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/rosmebeli/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header links={HeaderLinks} />
    <slot />
    <Footer />
    <script>
      import gsap from "gsap";
      import ScrollTrigger from "gsap/ScrollTrigger";

      window.gsap = gsap;
      window.ScrollTrigger = ScrollTrigger;

      gsap.registerPlugin(ScrollTrigger);
    </script>
    <script>
      // Регистрируем swiper
      import { register } from 'swiper/element/bundle';
      register()
    </script>
  </body>
</html>

<style is:global>
	swiper-container {
		width: 100%;
		height: 100%;
	}

	swiper-slide {
		display: flex;
		place-items: center;
		width: 30%;
		height: 100%;
	}

	swiper-slide > img {
		display: block;
		width: 100%;
		height: 200px;
		object-fit: cover;
	}
</style>
