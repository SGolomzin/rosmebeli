---
interface Props extends astroHTML.JSX.HTMLAttributes {
	size?: "sm" | "md" | "lg";
}

const { size = "sm", class: className, ...rest } = Astro.props;
---
<span
	class:list={[
		"tag",
		`tag--${size}`,
		className
	]}
	{...rest}
>
	<slot />
</span>

<style lang="scss">
	.tag {
		width: max-content;
		padding: 0.2rem 0.5rem;

		font-family: var(--font-family-primary);
		font-weight: 700;
		color: var(--clr-100);
		text-transform: uppercase;

		background-color: var(--text-color-highlight);
		border-radius: 0.45em;

		&--sm {
			font-size: 0.65rem;
		}

		&--md {
			font-size: 0.85rem;
		}

		&--lg {
			font-size: 1.1rem;
		}
	}
</style>